# üí• Garbage collection
alias nix-gc='sudo nix-collect-garbage -d && nix-collect-garbage -d && nix store gc'

# üîé Diff generations
alias nix-diff='nvd diff /run/current-system /nix/var/nix/profiles/system'

# üìÑ Show current system config
alias nixos-config='cd /etc/nixos && lsd --tree'

# üìÅ Edit flake
alias flake-edit='nvim /etc/nixos/flake.nix'

# üß† Show news
alias nix-news='home-manager news'

# ‚öôÔ∏è Update flake inputs
alias flake-update='cd /etc/nixos && nix flake update'


nixdo() {
  echo "Choose: [1] System, [2] Home, [3] Both"
  read -r choice
  case "$choice" in
    1) ns ;;
    2) hm ;;
    3) nix-rebuild ;;
    *) echo "Invalid" ;;
  esac
}

